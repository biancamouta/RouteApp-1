<p id="notice"><%= notice %></p>

<h1>Edges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Source</th>
      <th>Destiny</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @edges.each do |edge| %>
      <tr>
        <td><%= edge.name %></td>
        <td><%= edge.source %></td>
        <td><%= edge.destiny %></td>
        <td><%= edge.value %></td>
        <td><%= link_to 'Show', edge %></td>
        <td><%= link_to 'Edit', edit_edge_path(edge) %></td>
        <td><%= link_to 'Destroy', edge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Edge', new_edge_path %>
